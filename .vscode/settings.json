{
    "latex-workshop.latex.recipes": [
      {
        "name": "xelatex+biber",
        "tools": [
          "xelatex",
          "biber",
          "xelatex"
        ]
      }],
    "latex-workshop.latex.tools": [
      {
          "name": "xelatex",
          "command": "xelatex",
          "args": [
              "-shell-escape",
              "-synctex=1",
              "-interaction=nonstopmode",
              "-file-line-error",
              "%DOCFILE%"
          ]
      },
      {
          "name": "biber",
          "command": "biber",
          "args": [
              "%DOCFILE%"
          ]
      }],
  }